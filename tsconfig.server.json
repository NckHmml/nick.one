{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    },
    "lib": [
      "ESNext",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}