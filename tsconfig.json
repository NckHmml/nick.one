{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "jsx": "react",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "*"
      ],
      "*": [
        "./node_modules/*"
      ]
    },
    "lib": [
      "es5",
      "es6",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}