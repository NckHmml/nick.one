{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "jsx": "react",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "*"
      ],
      "*": [
        "./node_modules/*"
      ]
    },
    "lib": [
      "es5",
      "es6",
      "dom"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true,
    "babelOptions": {
      "babelrc": false,
      "presets": [
        "@babel/preset-react",
        [
          "@babel/preset-env",
          {
            "useBuiltIns": "usage",
            "targets": {
              "browsers": "last 2 versions, ie 11",
            },
            "modules": "commonjs"
          }
        ]
      ]   
    },
    "babelCore": "@babel/core",
    "forceIsolatedModules": true,
    "reportFiles": ["src/**/*.{ts,tsx,json}"]
  }
}